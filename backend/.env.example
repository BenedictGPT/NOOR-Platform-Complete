# NOOR Platform Backend - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================
# Application Settings
# ======================
APP_NAME=NOOR Platform
APP_VERSION=7.2.0
ENVIRONMENT=development
DEBUG=true

# ======================
# Security (REQUIRED)
# ======================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY_MIN_32_CHARS

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# Database (REQUIRED)
# ======================
# PostgreSQL - Primary Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=noor
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=noor_db

# ======================
# Optional Databases
# ======================
# MongoDB - Logging & Analytics
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=noor
MONGODB_PASSWORD=
MONGODB_DB=noor_logs

# Redis - Caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Neo4j - Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# Elasticsearch - Search
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=

# ======================
# AI Services
# ======================
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=
AI_MODEL=claude-3-5-sonnet-20241022
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
MASTER_ORCHESTRATOR_MODEL=claude-3-5-sonnet-20241022

# ======================
# UAE Government APIs
# ======================
# UAE Pass (OAuth)
UAE_PASS_CLIENT_ID=
UAE_PASS_CLIENT_SECRET=
UAE_PASS_REDIRECT_URI=https://noor.gov.ae/auth/callback
UAE_PASS_BASE_URL=https://stg-id.uaepass.ae

# SEHA (Health)
SEHA_API_KEY=
SEHA_BASE_URL=https://api.seha.ae

# DHA (Dubai Health Authority)
DHA_API_KEY=
DHA_BASE_URL=https://api.dha.gov.ae

# MOHAP (Ministry of Health)
MOHAP_API_KEY=
MOHAP_BASE_URL=https://api.mohap.gov.ae

# GPSSA (Pension)
GPSSA_API_KEY=
GPSSA_BASE_URL=https://api.gpssa.gov.ae

# ADPF (Pension Fund)
ADPF_API_KEY=
ADPF_BASE_URL=https://api.adpf.gov.ae

# ======================
# Email & SMS
# ======================
# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@noor.gov.ae

# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ======================
# Payment Services
# ======================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ======================
# Storage & Upload
# ======================
UPLOAD_DIR=/var/noor/uploads
MAX_UPLOAD_SIZE=10485760

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_PER_MINUTE=60

# ======================
# Monitoring
# ======================
# Sentry Error Tracking
SENTRY_DSN=

# ======================
# Message Queue
# ======================
# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ======================
# Agent Configuration
# ======================
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
ENABLE_AGENT_LOGGING=true
ENABLE_AI_FEATURES=true

# ======================
# CORS Origins
# ======================
# Comma-separated list
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
